---
import { siteConfig } from '../config.js';

const githubSocial = siteConfig.socials.find(s => s.name === 'GitHub');
const githubUrl = githubSocial?.url || 'https://github.com';
---

<nav class="fixed top-0 left-0 right-0 z-50 nav-blur transition-transform duration-300">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex items-center justify-between h-20">
      <a href="/" class="relative group">
        <span class="text-2xl font-display tracking-wider gradient-text hover:scale-105 transition-transform inline-block">
          {siteConfig.name}
        </span>
        <div class="absolute -bottom-1 left-0 w-0 h-0.5 gradient-bg group-hover:w-full transition-all duration-300"></div>
      </a>
      
      <div class="hidden lg:flex items-center gap-1">
        {siteConfig.navigation.map((item, index) => (
          <a 
            href={item.href} 
            class="nav-link px-4 py-2 rounded-full text-sm font-medium relative overflow-hidden group"
            style={`animation-delay: ${index * 0.1}s;`}
          >
            <span class="relative z-10">{item.name}</span>
            <div class="absolute inset-0 bg-gradient-to-r from-primary/0 via-primary/20 to-primary/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
          </a>
        ))}
      </div>

      <div class="hidden lg:flex items-center gap-4">
        <!-- Fixed theme toggle with proper icon positioning -->
        <a 
          href={githubUrl}
          target="_blank"
          rel="noopener"
          class="px-6 py-3 gradient-bg rounded-full font-medium hover:scale-105 transition-all glow-hover inline-flex items-center gap-2"
        >
          <i class="fa-brands fa-github text-lg"></i>
          <span>GitHub</span>
        </a>
      </div>

      <button 
        id="mobile-menu-btn" 
        class="lg:hidden w-12 h-12 glass glass-hover rounded-full flex items-center justify-center relative"
        aria-label="Toggle menu"
      >
        <div class="hamburger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="lg:hidden mobile-menu">
    <div class="glass border-t border-white/10 backdrop-blur-xl">
      <div class="max-w-7xl mx-auto px-6 py-6 space-y-2">
        {siteConfig.navigation.map((item) => (
          <a 
            href={item.href} 
            class="block px-4 py-3 rounded-xl hover:bg-white/10 transition-colors font-medium mobile-menu-item"
          >
            {item.name}
          </a>
        ))}
        <a 
          href={githubUrl}
          target="_blank"
          rel="noopener"
          class="flex items-center justify-center gap-2 px-4 py-3 gradient-bg rounded-xl font-medium mt-4 mobile-menu-item"
        >
          <i class="fa-brands fa-github"></i>
          <span>GitHub</span>
        </a>
      </div>
    </div>
  </div>
</nav>

<style>
  .nav-blur {
    background: rgba(10, 10, 10, 0.8);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  html.light .nav-blur {
    background: rgba(255, 255, 255, 0.8);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .nav-link {
    opacity: 0;
    animation: fadeInDown 0.5s ease-out forwards;
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .nav-link:hover {
    color: #6366f1;
  }

  .hamburger {
    width: 24px;
    height: 18px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .hamburger span {
    display: block;
    height: 2px;
    width: 100%;
    background: white;
    border-radius: 2px;
    transition: all 0.3s ease;
  }

  html.light .hamburger span {
    background: black;
  }

  .menu-open .hamburger span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .menu-open .hamburger span:nth-child(2) {
    opacity: 0;
  }

  .menu-open .hamburger span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  .mobile-menu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-menu.open {
    max-height: 500px;
  }

  .mobile-menu-item {
    opacity: 0;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }

  .mobile-menu.open .mobile-menu-item {
    opacity: 1;
    transform: translateY(0);
  }

  .mobile-menu.open .mobile-menu-item:nth-child(1) { transition-delay: 0.1s; }
  .mobile-menu.open .mobile-menu-item:nth-child(2) { transition-delay: 0.15s; }
  .mobile-menu.open .mobile-menu-item:nth-child(3) { transition-delay: 0.2s; }
  .mobile-menu.open .mobile-menu-item:nth-child(4) { transition-delay: 0.25s; }
  .mobile-menu.open .mobile-menu-item:nth-child(5) { transition-delay: 0.3s; }

  .toggle-circle {
    left: 1px;
    transition: left 0.3s ease;
  }

  :global(html.dark) .toggle-circle {
    left: 1px;
  }

  :global(html.light) .toggle-circle {
    left: 33px;
  }

  .mobile-toggle-circle {
    left: 1px;
    transition: left 0.3s ease;
  }

  :global(html.dark) .mobile-toggle-circle {
    left: 1px;
  }

  :global(html.light) .mobile-toggle-circle {
    left: 26px;
  }
</style>

